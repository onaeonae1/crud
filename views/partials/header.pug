header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                i.fas.fa-home
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search by term...", name="term")
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Log In
                else 
                    li
                        a(href=routes.userDetail(loggedUser.id)) Profile: #{loggedUser.name}
                    li
                        a(href=routes.logout) Log Out
                    li
                        a(href=routes.upload) Feed Upload