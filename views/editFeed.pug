extends layouts/main
block content
    .form_container
        form(actions=`${routes.editFeed(feed.id)}`, method="post", enctype="multipart/form-data")
            input(type="text", name="title", value=`${feed.title}`, placeholder="제목")
            .fileUpload
                label(for="imageFile") Image
                input(type="file", id="imageFile", name="imageFile", accept="image/*")
            textArea(name="description", value=`${feed.description}`, placeholder="내용")
            input(type="submit", value="수정 완료")